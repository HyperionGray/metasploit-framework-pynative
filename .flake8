[flake8]
# Python linting configuration (converted from .rubocop.yml)
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .tox,
    venv,
    env
# Ignore codes:
# E501 - line too long (handled by max-line-length)
# W503 - line break before binary operator
# E203 - whitespace before ':'
ignore = E501,W503,E203
per-file-ignores =
    __init__.py:F401
